<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HeightActivity">

    <TextView
            android:text="@string/height"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:id="@+id/height"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="36sp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/tall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
    <Spinner
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:id="@+id/spinner" android:entries="@array/txt_height_arr"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/height"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <SeekBar
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:id="@+id/seekBar" android:max="200" android:progress="160"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/spinner"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroup" android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/seekBar" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp">
        <RadioButton
                android:text="@string/height1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/height1" android:layout_weight="1"/>
        <RadioButton
                android:text="@string/height2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/height2" android:layout_weight="1"/>
        <RadioButton
                android:text="@string/height3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/height3"/>
        <RadioButton
                android:text="@string/height4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/height4" android:layout_weight="1"/>
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>